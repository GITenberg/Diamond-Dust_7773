\par {\pntext\pard\plain\ltrpar \rtlch\fcs1 \ab\af1\afs20 \ltrch\fcs0 \b\f1\fs20\cf6\lang1033\langfe1033\cgrid0\langfenp1033\insrsid4005967 \hich\af1\dbch\af13\loch\f1 1:\hich\f1 \'b6\loch\f1 28\tab}}\pard \ltrpar\ql \li0\ri14\sl480\slmult1\widctlpar
